        "example": "your_secret_key"
      },
      {
        "key": "MAPS_API_KEY",
        "description": "Maps service API key",
        "example": "your_maps_api_key"
      },
      {
        "key": "SMS_GATEWAY_KEY",
        "description": "SMS gateway API key",
        "example": "your_sms_key"
      }
    ]
  },

