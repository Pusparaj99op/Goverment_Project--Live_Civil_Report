  "systemArchitecture": {
    "layers": [
      {
        "name": "Presentation Layer",
        "components": ["Web App", "Mobile App", "Admin Dashboard"],
        "description": "Citizen & Admin Interface"
      },
      {
        "name": "API Layer",
        "components": ["API Gateway", "Load Balancer"],
        "description": "Request routing and load distribution"
      },
      {
        "name": "Service Layer",
        "type": "Microservices",
        "components": [
          "Complaint Service",
          "Analytics Service",
          "Notification Service",
          "User Management Service",
          "Ward Scoring Service",
          "Department Management Service"
        ],
        "description": "Business logic and processing"
      },
      {
        "name": "Data Layer",
        "components": ["PostgreSQL", "Redis", "S3", "Elasticsearch"],
        "description": "Data persistence and caching"
      }
    ],
    "pattern": "Microservices Architecture",
    "scalability": "Horizontal scaling enabled"
  },

  "prerequisites": {
    "runtime": {
      "nodejs": "v18 or higher",
      "python": "v3.9 or higher",
      "postgresql": "v14 or higher"
    }
  },

  "environmentConfiguration": {
    "required": [
      {
        "key": "DATABASE_URL",
        "description": "PostgreSQL connection string",
        "example": "postgresql://user:password@localhost:5432/city_report_card"
      },
      {
        "key": "REDIS_URL",
        "description": "Redis connection string",
        "example": "redis://localhost:6379"
      },
      {
        "key": "JWT_SECRET",
